{# {% extends 'base.html.j2' %}
{% block title %}
Pokemon
{% endblock %}

{% block content %}
<h1>Pokemon</h1>
<form action="{{url_for('pokemon')}}" method="POST">
  <div class="mb-3">
    <label for="year" class="form-label">Pokemon</label>
    <input type="text" name="year" class="form-control" id="year" aria-describedby="emailHelp">
  </div>
  <div style="color:red;">{{ error }}</div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

{%if pokemons%}
    <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Height</th>
      <th scope="col">Weight</th>
      <th scope="col">Ability</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
{%for poke in pokemons%}
    <tr>
      <th scope="row">{{poke.name}}</th>
      <td>{{poke.height}}</td>
      <td>{{poke.weight}}</td>
      <td>{{poke.ability}}</td>
      <td><img src='{{poke.image}}'></td>
    </tr>
{%endfor%}
  </tbody>
</table>
{% endif %}
{% endblock %} #}
